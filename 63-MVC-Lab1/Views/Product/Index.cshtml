@model List<Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürünler</h1>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3 p-3">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" >
                    <div class="border-1">
                        <h4>@item.Name</h4>
                        <p><b>Fiyatı: </b> @item.Price</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

